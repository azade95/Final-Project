@model List<Employee>


    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Striped Table</h4>
                <a class="btn btn-primary" asp-controller="employee" asp-action="create">Create Employee</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    image
                                </th>
                                <th>
                                    Fullname
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Employee employee in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/assets/images/team/@employee.Image" alt="image" />
                                    </td>
                                    <td>
                                       @employee.Name @employee.Surname
                                    </td>
                                    <td>
                                        <a class="btn btn-warning" asp-controller="employee" asp-action="update" asp-route-id="@employee.Id">Update</a>
                                        <a class="btn btn-danger" asp-controller="employee" asp-action="delete" asp-route-id="@employee.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                           
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



<nav aria-label="...">
    <ul class="pagination pagination-lg">
        @for (int i = 1; i <= ViewBag.Pages; i++)
        {
            <li class="page-item @(ViewBag.CurrentPage==i? "disabled":"")">
                <a class="page-link" asp-route-page="@i" tabindex="-1">@i</a>
            </li>
        }
   
        
    </ul>
</nav>

