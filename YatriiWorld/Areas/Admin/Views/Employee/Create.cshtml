@model CreateEmployeeVM


    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Employee</h4>
                
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname">Surname</label>
                        <input asp-for="Surname" class="form-control" placeholder="Surname">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                  
                           <div class="form-group">
                            <select asp-for="PositionId">
                            @foreach (Position position in ViewBag.Positions)
                            {
                                    <option value="@position.Id">@position.Name</option>
                            }
                           </select>
                         </div>
                    <div class="form-group">
                        <label asp-for="Photo">File upload</label>
                       
                        <div class="input-group col-xs-12">
                            <input asp-for="Photo" class="form-control file-upload-info"  placeholder="Upload Image">
                        </div>
                    </div>
                  
                    <button type="submit" class="btn btn-primary me-2">Create</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>


 

