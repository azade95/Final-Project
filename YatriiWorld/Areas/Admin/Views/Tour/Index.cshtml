@{
    int count = 0;
}
@model List<Tour>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tours</h4>
            <a class="btn btn-success" asp-controller="tour" asp-action="create">Create Tour</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Destination
                            </th>

                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Tour tour in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>

                                <td>
                                    <img style="width:150px; height:150px" src="~/assets/images/tour/@tour.Image">
                                </td>
                                <td>
                                    @tour.Title
                                </td>
                                <td>
                                    @tour.Destination
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="update" asp-controller="tour" asp-route-id="@tour.Id"><i class="mdi mdi-pencil-box"></i></a>
                                    <a class="btn btn-danger" asp-action="delete" asp-controller="tour" asp-route-id="@tour.Id"><i class="mdi mdi-delete"></i></a>
                                    <a class="btn btn-primary" asp-action="details" asp-controller="tour" asp-route-id="@tour.Id"><i class="mdi mdi-open-in-new"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



